{
	"name": "class-base",
	"version": "0.1.0",
	"type": "component",
	"build": {
		"from": "src/class-base.js",
		"to": "dist/class-base.js",
		"options": {
			"minify": true,
			"sourcemap": true,
			"vendors": false
		}
	},
	"preview": {
		"dir": ".preview_tmp",
		"script": {
			"from": "src/script/{{componout-name}}.js",
			"options": {
				"minify": false,
				"sourcemap": true,
                "vendors": true
			},
			"settings": {}
		},
		"index": {
			"from": "preview/index.html"
		},
		"watch": [
			"preview/index.html",
			"preview/{{componout-name}}.js",
			"preview/{{componout-name}}.scss",
			"src/**/*.js",
			"src/**/*.scss"
		],
		"server": "preview/server.js"
	},
	"test": {
		"entry": {
			"from": "test/specs/{{componout-name}}.js",
			"settings": {}
		},
		"reporters": "test/reporters",
		"debug": false,
		"browsers": ["PhantomJS"]
	}
}
